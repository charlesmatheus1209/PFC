<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coleta de Dados GNSS + Acelerômetro"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/label_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Latitude -->
        <TextView
            android:id="@+id/label_lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Longitude -->
        <TextView
            android:id="@+id/label_lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Altitude -->
        <TextView
            android:id="@+id/label_altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altitude (m):"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_altitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Velocidade -->
        <TextView
            android:id="@+id/label_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Velocidade (m/s):"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Precisão -->
        <TextView
            android:id="@+id/label_accuracy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precisão (m):"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Course -->
        <TextView
            android:id="@+id/label_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course (°):"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Satélites -->
        <TextView
            android:id="@+id/label_satellites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satélites Visíveis:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_satellites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <!-- Fix -->
        <TextView
            android:id="@+id/label_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Fix:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="12dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="12dp" />

        <!-- Acelerômetro -->
        <TextView
            android:id="@+id/label_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acelerômetro (m/s²)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/label_acc_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eixo X:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_accel_x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/label_acc_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eixo Y:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_accel_y"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/label_acc_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eixo Z:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_accel_z"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

    </LinearLayout>
</ScrollView>
